<% title "Updated User" %>
<%- model_class = Login -%>
<% if can? :manage, @login %>
<div class="page-header">
  <h1><%=t '.title', :default => "User Profile" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>First name:</strong></dt>
  <dd><%= @login.firstname %></dd>
  <dt><strong>Last Name:</strong></dt>
  <dd><%= @login.lastname %></dd>
  <dt><strong>Phone:</strong></dt>
  <dd><%= @login.phone %></dd>
  <dt><strong>Username:</strong></dt>
  <dd><%= @login.username %></dd>
  <dt><strong>Email:</strong></dt>
  <dd><%= @login.email %></dd>
  <dt><strong>Role:</strong></dt>
  <dd><%= @login.role %></dd>
  <dt><strong>Status:</strong></dt>
  <dd><%= @login.status %></dd>
</dl>
<div class="form-actions">
  <div class="col-sm-4 col-sm-offset-1">
  <%= link_to '<i class="glyphicon glyphicon-hand-left"></i>Back'.html_safe,
              logins_path, class: "btn btn-sm btn-custom-back"  %>
  <%= link_to '<i class="glyphicon glyphicon-edit"></i>Edit'.html_safe,
              edit_login_path(@login), class: "btn btn-sm btn-custom-edit" %>
  <%= link_to '<i class="glyphicon glyphicon-trash"></i>Delete'.html_safe,
              login_path(@login),
              class: "btn btn-sm btn-custom-delete", method: :delete,
              data: { confirm: 'Are you sure?' } %>
</div>
</div>

<div class="form-actions">
  <div class="row">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              logins_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_login_path(@login), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              login_path(@login),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-warning' %>
</div>
</div>
<% end %>
