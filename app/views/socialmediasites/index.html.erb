<%- model_class = Socialmediasite -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Social Media Site Maintenance' %></h1>
</div>
<!-- <table class="table table-striped"> -->
<div class="container">
<br />
<div class="row">
  <div class="col-lg-6">
        <%= form_tag socialmediasites_path, :class => 'navbar-search', :method => :get do %>
        <%= text_field_tag :search, params[:search], class: 'search-query', placeholder: "Enter site name to search", :style => "padding-left:21px;height:31px;vertical-align:top" %>
          <div class="icon-search" style="position:absolute;top:8px;left:7px;"></div>
          <%= button_tag(type: "submit", class: "btn btn-info") do %>
                <span class="glyphicon glyphicon-search"></i>
          <% end %>
            <span class="actions content">
                 <%= link_to raw("<i class=\"icon-plus-sign icon-white\">Add A New Social Media Site</i>"), new_socialmediasite_path, class: "btn btn-mini btn-success" %>
            </span>
        <% end %>
  </div><!-- class=col-lg-6 -->
</div><!-- class = row -->
</div><!-- class = container -->
<br />
<div class="container">
   <div class="actions content">
      <%= link_to raw("<i class=\"icon-arrow-left icon-black\">Back</i>"),session[:home_page], class: "btn btn-mini btn-default" %>
   </div>
   <h5>List of Existing Social Media Sites</h5>
  <tbody>
    <% @socialmediasites.each do |socialmediasite| %>
  <!--      <%= link_to socialmediasite.ssid, socialmediasite_path(socialmediasite) %>< -->
  <br />
       <div class="col-md-2 col-md-offset-1">
             <h4>Social MediaID#<%= socialmediasite.ssid %></h4>
             <div class="actions">
                <%= link_to raw("<i class=\"icon-edit icon-black\">Edit</i>"), edit_socialmediasite_path(socialmediasite), class: "btn btn-mini" %>
                <%= link_to raw("<i class=\"icon-trash icon-black\">Delete</i>") , socialmediasite_path(socialmediasite), class: "btn btn-mini btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %>
             </div><!-- class=action -->
        </div><!-- class="col-md-2 col-md-offset-1" -->
        <div class="col-md-9">
            <h4><%= socialmediasite.ssname %></h4>
            <div class="body">
                URI  : <tt><%= socialmediasite.ssurl %></tt><br />
                Request Query: <tt> <%= socialmediasite.ssurlquery %></tt><br />
                Access Token:<tt> ****************************</tt><br />
                Token Secret Key: <tt>************************</tt><br />
                Consumer Key: <tt>****************************</tt><br />
                Consumer Secret: <tt>*************************</tt><br />
                Status: <tt><%= socialmediasite.status %></tt><br />
           </div><!-- class="body" -->
       </div><!-- class=col-md-9 -->
       <% end %><!-- |socialmediasite| -->
  
  </tbody>
</div><!-- container -->
