<%= form_for @socialmediasite, :html => { :class => 'form-vertical' } do |f| %>
  <div class="control-group">
    <div class="controls">
       <div class="container">
         <div class="row">
           <div class="col-sm-3 control-label">
    		<%= f.label :ssid, 'SocialMediaSiteID:' %>
      	   </div>
           <div class="col-sm-6">
		<%= tooltip_for("ID automatically generated by the System, No input required.") do %>
                    <%= f.text_field :ssid,readonly:true,:class => 'form-control input-sm', :placeholder => 'System generated ID, no input required' %>
                <% end %>
           </div>
         </div><!-- row -->
        <div class="row">
           <div class="col-sm-3 control-label">
    		<%= f.label :ssname,'Social Media Site Name:' %>
           </div>
	   <div class="col-sm-6">
                <%= tooltip_for("Social Media Site names, e.g. twitter, google, yelp, etc") do %>
                    <%= f.text_field :ssname, :class => 'form-control input-sm' %>
           <% end %></div>
           <div class="col-sm-3 control-label" style="padding:0;">
 		<h8>* Required</h8>
           </div> 
        </div><!-- row -->
        <div class="row">
           <div class="col-sm-3 control-label">
                <%= f.label :ssurl,'URL:' %>
    	   </div>
	   <div class="col-sm-6">
                <%= tooltip_for("URL of social media required for data request e.g for google search URL, enter: https://maps.googleapis.com/maps/api/place/details/json?placeid=") do %>
      	 	    <%= f.text_field :ssurl, :class => 'form-control input-sm' %>
                <% end %>
           </div>
           <div class="col-sm-3 control-label" style="padding:0;">
 		<h8>* Required(main part, before the business entity parameter)</h8>
           </div>
        </div><!-- row -->
        <div class="row">
           <div class="col-sm-3 control-label">
    		<%= f.label :ssurlquery,'Query Header(part 2):' %>
           </div>
	   <div class="col-sm-6">
                <%= tooltip_for("Part 2 of the query header text to send http data request e.g. google search part 2 : &sensor=true&key=") do %>
           	   <%= f.text_field :ssurlquery, :class => 'form-control input-sm', :placeholder => 'Part before the authentication key parameter' %>
                <% end %>
           </div>
        </div><!-- row -->
        <div class="row">
  	   <div class="col-sm-3 control-label">
    		<%= f.label :ssaccesstoken,'Access Token:' %>
   	   </div>
	   <div class="col-sm-6">
                <%= tooltip_for("Enter Access token issued by Social Media Site, if any,  for data request") do %>
      		   <%= f.text_field :ssaccesstoken, :class => 'form-control input-sm' %>
                <% end %>
           </div>
        </div><!-- row -->
        <div class="row">
           <div class="col-sm-3 control-label">
                <%= f.label :ssaccesstokensecretkey,'Access Token Secret key:' %>
           </div>    
	   <div class="col-sm-6">
                <%= tooltip_for("Enter Access token secret key issued by Social Media Site, if any,  for data request") do %>
  		<%= f.text_field :ssaccesstokensecretkey, :class => 'form-control input-sm' %>
                <% end %>
           </div>
        </div><!-- row -->
        <div class="row">
           <div class="col-sm-3 control-label">
            	 <%= f.label :ssconsumerkey,'Consumer Key:' %>
           </div>
	   <div class="col-sm-6">
		<%= tooltip_for("Enter the consumer key issued by Social Media Site, if any,  for data request") do %>
              	  <%= f.text_field :ssconsumerkey, :class => 'form-control input-sm' %>
	      	<% end %>
           </div>
        </div><!-- row -->
        <div class="row">
           <div class="col-sm-3 control-label">
     		<%= f.label :ssconsumersecret,'Consumer Secret:' %>
           </div>
           <div class="col-sm-6">
                <%= tooltip_for("Enter the consumer secret key issued by Social Media Site, if any, for data request") do %>
     		  <%= f.text_field :ssconsumersecret, :class => 'form-control input- sm' %>
  	        <% end %>
           </div>
        </div><!-- row -->
	 <div class="row">
           <div class="col-sm-3 control-label">
                <%= f.label :searchby,'SearchBy:' %>
           </div>
           <div class="col-sm-6">
                <%= tooltip_for("Select Sending request to search by Business Name or Phone number.") do %>
                <%= f.select(:sssearchby, ['business name', 'business phone'],{}, { :class => 'form-control input-sm'}) %>
                <% end %>
          </div>
        </div><!-- row -->
          <div class="row">
             <div class="col-sm-3 control-label">
    		<%= f.label :status,'Status:' %>
   	     </div>
           <div class="col-sm-6">
                  <%= f.label :status, "Active", :value => "active" %>
	          <%=f.radio_button :status,"active", :checked => true , :class => 'status-radiobutton' %>
                  <%= f.label :status, "Inactive", :value => "inactive" %>
	          <%=f.radio_button :status, "inactive", :class => 'status-radiobutton' %>      		
 	   </div>
        </div><!-- row -->        
      		<%= f.hidden_field :login_id %>
     </div><!-- container -->
  </div><!-- controls-->
</div><!-- controlgroups -->
  <br />
  <div class="form-actions">
    <div class="col-sm-4">
     	<%= f.submit 'Submit',  :class => 'btn btn-primary' %>
<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                socialmediasites_path, :class => 'btn' %>
    </div>
  </div>
<% end %>

