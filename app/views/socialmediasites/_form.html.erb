<%= form_for @socialmediasite, :html => { :class => 'form-vertical' } do |f| %>
  <div class="control-group">
    <div class="controls">
       <div class="container">
         <div class="row">
           <div class="col-sm-3 control-label">
    		<%= f.label :ssid, 'SocialMediaSiteID:' %>
      	   </div>
           <div class="col-sm-9">
		<%= tooltip_for("ID automatically generated by the System, No input required.") do %>
                    <%= f.text_field :ssid,readonly:true,:class => 'form-control input-sm', :placeholder => 'System generated ID, no input required' %>
                <% end %>
           </div>
         </div><!-- row -->
        <div class="row">
           <div class="col-sm-3 control-label">
    		<%= f.label :ssname,'Social Media Site Name:' %>
           </div>
	   <div class="col-sm-9">
                <%= tooltip_for("Social Media Site names, e.g. twitter, google, yelp, etc") do %>
                    <%= f.text_field :ssname, :class => 'form-control input-sm' %>
                <% end %>
           </div>
        </div><!-- row -->
        <div class="row">
           <div class="col-sm-3 control-label">
                <%= f.label :ssurl,'URL:' %>
    	   </div>
	   <div class="col-sm-9">
                <%= tooltip_for("URL of social media required for data request") do %>
      	 	    <%= f.text_field :ssurl, :class => 'form-control input-sm' %>
                <% end %>
           </div>
        </div><!-- row -->
        <div class="row">
           <div class="col-sm-3 control-label">
    		<%= f.label :ssurlquery,'Query Header:' %>
           </div>
	   <div class="col-sm-9">
                <%= tooltip_for("Part of the query header text to send http data reques") do %>
           	   <%= f.text_field :ssurlquery, :class => 'form-control input-sm' %>
                <% end %>
           </div>
        </div><!-- row -->
        <div class="row">
  	   <div class="col-sm-3 control-label">
    		<%= f.label :ssaccesstoken,'Access Token:' %>
   	   </div>
	   <div class="col-sm-9">
                <%= tooltip_for("Enter Access token issued by Social Media Site, if any,  for data request") do %>
      		   <%= f.text_field :ssaccesstoken, :class => 'form-control input-sm' %>
                <% end %>
           </div>
        </div><!-- row -->
        <div class="row">
           <div class="col-sm-3 control-label">
                <%= f.label :ssaccesstokensecretkey,'Access Token Secret key:' %>
           </div>    
	   <div class="col-sm-9">
                <%= tooltip_for("Enter Access token secret key issued by Social Media Site, if any,  for data request") do %>
  		<%= f.text_field :ssaccesstokensecretkey, :class => 'form-control input-sm' %>
                <% end %>
           </div>
        </div><!-- row -->
        <div class="row">
           <div class="col-sm-3 control-label">
            	 <%= f.label :ssconsumerkey,'Consumer Key:' %>
           </div>
	   <div class="col-sm-9">
		<%= tooltip_for("Enter the consumer key issued by Social Media Site, if any,  for data request") do %>
              	  <%= f.text_field :ssconsumerkey, :class => 'form-control input-sm' >
	      	<% end %>
           </div>
        </div><!-- row -->
        <div class="row">
           <div class="col-sm-3 control-label">
     		<%= f.label :ssconsumersecret,'Consumer Secret:' %>
           </div>
           <div class="col-sm-9">
                <%= tooltip_for("Enter the consumer secret key issued by Social Media Site,
 if any,  for data request") do %>
     		  <%= f.text_field :ssconsumersecret, :class => 'form-control input- sm' %>
  	        <% end %>
           </div>
        </div><!-- row -->
        <div class="row">
           <div class="col-sm-3 control-label">
    		<%= f.label :status,'Status:' %>
   	   </div>
                  <%= f.label :status, "Active", :value => "active" %>
	          <%=f.radio_button :status,"active", :checked => true , :class => 'status-radiobutton' %>
                  <%= f.label :status, "Inactive", :value => "inactive" %>
	          <%=f.radio_button :status, "inactive", :class => 'status-radiobutton' %>      		
 	  </div><!-- row -->        
        <div class="row">
           <div class="col-sm-3 control-label">
    		<%= f.label :login_id,'Userid:' %>
    	   </div>
           <div class="col-sm-9">
      		<%= f.text_field :login_id, :readonly => true, :class => 'form-control input-sm' %>
           </div>
        </div><!-- row -->
        <div class="row">
           <div class="col-sm-3 control-label">
    		<%= f.label :searchby,'SearchBy:' %>
    	   </div>
           <div class="col-sm-9">
                <%= f.select(:sssearchby, ['business name', 'business phone'],{}, { :class => 'form-control input-sm'}) %>
	  </div>
        </div><!-- row -->
     </div><!-- container -->
  </div><!-- controls-->
</div><!-- controlgroups -->
  
  <div class="form-actions">
    <% if @socialmediasite.persisted? %>
    	<%= f.submit 'Update',  :class => 'btn btn-primary' %>
    <% else %>
     	<%= f.submit 'Submit',  :class => 'btn btn-primary' %>
    <% end %>    
<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                socialmediasites_path, :class => 'btn' %>
  </div>
<% end %>
