<%= form_for @business, :html => { :class => 'form-vertical' } do |f| %>
  <div class="control-group">
    <div class="controls">
    <div class="container">
      <div class="row">
         <div class="col-sm-2 control-label">  
    	       <%= f.label :bid,'Business ID:' %>
         </div>
            <div class="col-sm-6">
         <%= tooltip_for("ID automatically generated by the System, No input required.") do %>
		<%= f.text_field :bid, readonly: true, :placeholder => 'system generated ID, no input required', :class => 'form-control input-sm' %>
         <% end %></div>
      </div> <!-- row -->
      <div class="row">
           <div class="col-sm-2 control-label">  
               <%= f.label :bname,'Business Name:' %>
           </div>
     	      <div class="col-sm-6">
                 <%= tooltip_for("Business name is required for search social media posting.") do %>
               	   <%= f.text_field :bname, :class => 'form-control input-sm', :placeholder => 'Business Name:Required' %>
                 <% end %> </div>
	      <div class="col-sm-2">
                   <h8>* Required</h8>
              </div>
          </a>
	</div> <!-- row -->
       <div class="row">
         <div class="col-sm-2 control-label">  
               <%= f.label :btype,'Business Type:' %>
         </div>
         <div class="col-sm-6">
               <%= f.text_field :btype,:class => 'form-control input-sm', :placeholder => 'e.g. hotel, food service, etc.' %>
	 </div>
       </div> <!-- row -->
       <div class="row">
	  <div class="col-sm-2 control-label">  
               <%= f.label :bphone,'Phone Number(s):' %>
         </div>
	     <div class="col-sm-6">
         <%= tooltip_for("Multiple phones can be entered, separated by comma(,)") do %>
               <%= f.text_field :bphone,:class => 'form-control input-sm', :placeholder => 'separate each phone # by comma, if multiple phones are entered' %>
           <% end %> </div>
	     
             <div class="col-sm-3">
 	            <h8>* required,e.g. ###-###-####</h8>
             </div>
       </div>
       <div class="row">
         <div class="col-sm-2 control-label">  
               <%= f.label :bstreet,'Address:' %>
         </div>
	  <div class="col-sm-6">
               <%= f.text_field :bstreet, :class => 'form-control input-sm' %>
          </div>
       </div><!-- row -->
       <div class="row">
         <div class="col-sm-2 control-label">  
               <%= f.label :bcity, 'City:' %>
         </div>
	  <div class="col-sm-6">
               <%= f.text_field :bcity, :class => 'form-control input-sm' %>
          </div>
       </div><!-- row -->
       <div class="row">
          <div class="col-sm-2 control-label"> 
               <%= f.label :bstate, 'State or province:' %>
          </div>
          <div class="col-sm-6">
             <%=f.select :bstate, options_for_select(us_states,f.object.bstate || "CA"), :class => 'form-control'  %>
          </div>
        </div>
	<div class="row">
          <div class="col-sm-2 control-label">  
               <%= f.label :bzip,'Zip Code:' %>
         </div>
	  <div class="col-sm-6">
               <%= f.text_field :bzip, :class => 'form-control input-sm' %></div>
        </div> <!-- row -->
        <div class="row">
           <div class="col-sm-2 control-label">  
               <%= f.label :bcountry,'Country:' %>
           </div>
           <div class="col-sm-6">
               <%= country_select("business","bcountry",{priority_countries: ["US", "GB"]}, { selected: "US",class: 'form-control input-sm'}) %></div>
        </div> <!-- row -->
         <div class="row">
                <div class="col-sm-2 control-label">  
                   <%= f.label :bstatus,'Status:' %>
                </div>
                  <%= f.label :bstatus, "Active", :value => "active" %>
                  <%=f.radio_button :bstatus, "active" , :checked => true, :class => 'status-radiobutton' %>
                  <%= f.label :bstatus, "Inactive", :value => "inactive" %>
		 <%=f.radio_button :bstatus, "inactive", :class => 'status-radiobutton' %>
        </div><!-- row -->
</div><!-- container -->
</div><!-- controls-->
</div><!-- controlgroups -->
<br /> 
<div class="form-actions">
	<%= f.submit 'Submit', :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                   businesses_path, :class => 'btn' %>
</div>
<script src="js/vendor/jquery-1.9.1.min.js"></script>
<script src="js/vendor/bootstrap.min.js"></script>
<script>$('a').tooltip('show')</script>
<script>$('span').tooltip();</script>
<% end %>

