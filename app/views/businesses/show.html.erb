<%- model_class = Business -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:bid) %>:</strong></dt>
  <dd><%= @business.bid %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bname) %>:</strong></dt>
  <dd><%= @business.bname %></dd>
  <dt><strong><%= model_class.human_attribute_name(:btype) %>:</strong></dt>
  <dd><%= @business.btype %></dd>
  <dt><strong><%= model_class.human_attribute_name(:blatitude) %>:</strong></dt>
  <dd><%= @business.blatitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:blongitude) %>:</strong></dt>
  <dd><%= @business.blongitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bstreet) %>:</strong></dt>
  <dd><%= @business.bstreet %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bcity) %>:</strong></dt>
  <dd><%= @business.bcity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bstate) %>:</strong></dt>
  <dd><%= @business.bstate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bzip) %>:</strong></dt>
  <dd><%= @business.bzip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bcountry) %>:</strong></dt>
  <dd><%= @business.bcountry %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bstatus) %>:</strong></dt>
  <dd><%= @business.bstatus %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bphone) %>:</strong></dt>
  <dd><%= @business.bphone %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              businesses_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_business_path(@business), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              business_path(@business),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
