<% if can? :manage, @logins %>
   <%- model_class = Ssdmapping -%>
        <h2><%=t '.title', :default => 'Social Media Data Representation', :class => "page-header" %></h2>

<dl class="dl-horizontal">
 <div class="container">
 <div class="row">
  <dt><strong>Post.Mapping ID:</strong></dt>
  <dd><%= @ssdmapping.mappingid %></dd>
  <dt><strong>Social Media ID:</strong></dt>
  <dd><%= @ssdmapping.ssid %></dd>
  <dt><strong>Post.Commentor ID:</strong></dt>
  <dd><%= @ssdmapping.ssdcommentorid %></dd>
  <dt><strong>Post.CommentorName:</strong></dt>
  <dd><%= @ssdmapping.ssdcommentorname %></dd>
  <dt><strong>Post.CommentorTmz:</strong></dt>
  <dd><%= @ssdmapping.ssdcommentortimezone %></dd>
  <dt><strong>Post.Timezone:</strong></dt>
  <dd><%= @ssdmapping.ssdpostingtimezone %></dd>
  <dt><strong>Post.PostingURL:</strong></dt>
  <dd><%= @ssdmapping.postingURL %></dd>
  <dt><strong>Commentor Language:</strong></dt>
  <dd><%= @ssdmapping.ssdcommentorlanguage %></dd>
  <dt><strong>Total Reviews:</strong></dt>
  <dd><%= @ssdmapping.ssdtotalreview %></dd>
  <dt><strong>Overall Rating:</strong></dt>
  <dd><%= @ssdmapping.ssdoverallrating %></dd>
  <dt><strong>Commentor Rating:</strong></dt>
  <dd><%= @ssdmapping.ssdcommentorrating %></dd>
  <dt><strong>Comments:</strong></dt>
  <dd><%= @ssdmapping.ssdcomment %></dd>
  <dt><strong>Posting posted at:</strong></dt>
  <dd><%= @ssdmapping.ssdpostat %></dd>
  <dt><strong>Commentor Location:</strong></dt>
  <dd><%= @ssdmapping.ssdcommentorloc %></dd>
</dl>
</div><!-- container -->
</div><!-- row -->
<div class="form-actions">
<div class="col-sm-4 col-sm-offset-1">
  <%= link_to '<i class="glyphicon glyphicon-hand-left"></i>Back'.html_safe,
              ssdmappings_path, class: "btn btn-sm btn-custom-back"  %>
  <%= link_to '<i class="glyphicon glyphicon-edit"></i>Edit'.html_safe,
              edit_ssdmapping_path(@ssdmapping), class: "btn btn-sm btn-custom-edit" %>
  <%= link_to '<i class="glyphicon glyphicon-trash"></i>Delete'.html_safe,
              ssdmapping_path(@ssdmapping),
              class: "btn btn-sm btn-custom-delete", method: :delete,
              data: { confirm: 'Are you sure?' } %>
</div>
</div>

<% end %>
